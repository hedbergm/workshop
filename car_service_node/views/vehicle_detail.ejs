 
<section class="card">
  <h1>Bil: <%= v.regnr %></h1>
  <div class="grid two">
    <div>
      <h3>Detaljer</h3>
      <ul class="kv">
        <li><b>Merke:</b> <%= v.make %></li>
        <li><b>Type:</b> <%= v.vtype %></li>
        <li><b>Modell:</b> <%= v.model %></li>
        <li><b>Innkjøpspris:</b> <%= v.purchase_price != null ? Number(v.purchase_price).toFixed(0) : '-' %></li>
        <li><b>Sum kostnader:</b> <%= Number(totalCost).toFixed(0) %></li>
        <li><b>Utsalgspris:</b> <%= v.sale_price != null ? Number(v.sale_price).toFixed(0) : '-' %></li>
      </ul>
      <form method="post" action="/vehicles/<%= v.id %>/sell" class="inline">
        <label>Utsalgspris
          <input name="sale_price" type="number" step="0.01" min="0" value="<%= v.sale_price != null ? v.sale_price : '' %>">
        </label>
        <button class="btn">Lagre utsalgspris</button>
      </form>
      <p><a class="btn" href="/vehicles">Tilbake</a></p>
    </div>
    <div>
      <h3>Ny service/reparasjon</h3>
      <form method="post" action="/vehicles/<%= v.id %>/add_entry">
        <div class="grid two">
          <label>Dato
            <input type="date" name="date" value="<%= new Date().toISOString().slice(0,10) %>">
          </label>
          <label>Kategori
            <select name="category">
              <option value="service">Service</option>
              <option value="repair">Reparasjon</option>
            </select>
          </label>
          <label>Km-stand
            <input type="number" name="odometer" min="0" step="1">
          </label>
          <label>Kostnad (NOK)
            <input type="number" name="cost" min="0" step="0.01" required>
          </label>
        </div>
        <label>Beskrivelse
          <textarea name="description" rows="3" placeholder="Hva som er gjort"></textarea>
        </label>
        <div class="actions">
          <button type="submit" class="btn primary">Legg til</button>
        </div>
      </form>
    </div>
  </div>
</section>

<section class="card">
  <h2>Historikk</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Dato</th>
        <th>Kategori</th>
        <th>Km</th>
        <th>Kostnad</th>
        <th>Beskrivelse</th>
      </tr>
    </thead>
    <tbody>
      <% if (entries.length === 0) { %>
        <tr><td colspan="5">Ingen oppføringer enda.</td></tr>
      <% } %>
      <% for (const e of entries) { %>
      <tr>
        <td><%= e.date %></td>
        <td><%= e.category === 'service' ? 'Service' : 'Reparasjon' %></td>
        <td><%= e.odometer %></td>
        <td><%= Number(e.cost).toFixed(0) %></td>
        <td><%= e.description %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</section>
