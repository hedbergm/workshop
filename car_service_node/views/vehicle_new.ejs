 
<section class="card">
  <h1>Registrer ny bil</h1>
  <% if (error) { %><ul class="flash"><li><%= error %></li></ul><% } %>
  <form method="post">
    <div class="grid">
      <label>Eier
        <select name="owner_id">
          <option value="">(Ingen eier)</option>
          <% for (const o of owners) { %>
            <option value="<%= o.id %>"><%= o.name %></option>
          <% } %>
        </select>
      </label>
      <label>Regnr
        <input name="regnr" required placeholder="AB12345" maxlength="32">
      </label>
      <label>Merke
        <input name="make" required>
      </label>
      <label>Type
        <input name="vtype" required>
      </label>
      <label>Modell
        <input name="model" required>
      </label>
      <label>Innkj√∏pspris
        <input name="purchase_price" type="number" step="0.01" min="0">
      </label>
    </div>
    <div class="actions">
      <a class="btn" href="/vehicles">Avbryt</a>
      <button type="submit" class="btn primary">Lagre</button>
    </div>
  </form>
  <p class="hint">Mangler eier? <a href="/owners/new">Opprett ny eier</a></p>
</section>
